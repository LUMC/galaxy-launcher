[Unit]
Description=galaxy docker container
Requires=docker.service
After=docker.service

[Install]
WantedBy=multi-user.target

[Service]
Type=oneshot
ExecStart=/usr/bin/docker restart {{galaxy_docker_container_name}}
TimeoutSec=120
